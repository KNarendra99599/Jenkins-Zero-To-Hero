pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  tools {
      maven 'maven-3.9.3'
  }
  stages {
    stage('Checkout') {
      steps {
        sh "mvn install"
        sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/KNarendra99599/Jenkins-Zero-To-Hero.git'
      }
    }
  }
}
